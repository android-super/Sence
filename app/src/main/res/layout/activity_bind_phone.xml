<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".BindPhoneActivity">

    <ImageView
            android:id="@+id/bind_close"
            android:paddingLeft="28dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingRight="28dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/login_guanbi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_below="@id/bind_close"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="30dp"
            android:text="绑定手机号"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:id="@+id/bind_phone"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <LinearLayout
            android:id="@+id/bind_phone_layout"
            android:paddingLeft="28dp"
            android:paddingRight="28dp"
            android:layout_below="@id/bind_phone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:gravity="bottom"
            android:orientation="horizontal">

        <TextView
                android:text="+"
                android:textSize="17sp"
                android:textColor="#adadad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:text="86"
                android:textSize="20sp"
                android:textColor="#adadad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <EditText
                android:id="@+id/bind_number"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="20dp"
                android:gravity="bottom"
                android:minWidth="100dp"
                android:inputType="phone"
                android:maxLength="11"
                android:textColor="@color/black"
                android:textColorHint="#c2c8cd"
                android:hint="输入手机号"
                android:layout_marginLeft="8dp"
                android:textSize="20sp"/>
    </LinearLayout>

    <View
            android:id="@+id/bind_line"
            android:layout_below="@+id/bind_phone_layout"
            android:layout_marginTop="20dp"
            android:background="#eeeff0"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

    <TextView
            android:id="@+id/bind_get_code"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_below="@+id/bind_line"
            android:layout_marginTop="35dp"
            android:text="获取验证码"
            android:gravity="center"
            android:textColor="@color/color_state_bind"
            android:background="@drawable/shape_bind_selector"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

    <ImageView
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/login_sence2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</RelativeLayout>