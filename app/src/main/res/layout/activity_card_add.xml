<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f6f6f6"
        android:fitsSystemWindows="true"
        tools:context=".activity.CardAddActivity">

    <com.sence.view.PubTitle
            app:is_back="true"
            app:tool_cover_background="@color/white"
            app:tool_cover_title="添加银行卡"
            android:layout_width="match_parent"
            android:layout_height="45dp"/>

    <RelativeLayout
            android:background="@color/white"
            android:paddingLeft="18dp"
            android:layout_width="match_parent"
            android:layout_height="55dp">

        <TextView
                android:layout_centerVertical="true"
                android:text="持卡人姓名"
                android:textColor="#333333"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <EditText
                android:id="@+id/card_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minWidth="150dp"
                android:layout_marginRight="15dp"
                android:textSize="16sp"
                android:textColor="#333333"
                android:background="@android:color/transparent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical|right"
                android:hint="请输入持卡人姓名"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#f6f6f6"
                android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <RelativeLayout
            android:background="@color/white"
            android:paddingLeft="18dp"
            android:layout_width="match_parent"
            android:layout_height="55dp">

        <TextView
                android:layout_centerVertical="true"
                android:text="所属银行"
                android:textColor="#333333"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/card_bank"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minWidth="150dp"
                android:layout_marginRight="15dp"
                android:textSize="16sp"
                android:layout_alignParentRight="true"
                android:drawablePadding="8dp"
                android:drawableRight="@drawable/card_zhankai"
                android:gravity="center_vertical|right"
                android:hint="请选择银行"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#f6f6f6"
                android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <RelativeLayout
            android:background="@color/white"
            android:paddingLeft="18dp"
            android:layout_width="match_parent"
            android:layout_height="55dp">

        <TextView
                android:layout_centerVertical="true"
                android:text="手机号码"
                android:textColor="#333333"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <EditText
                android:id="@+id/card_phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minWidth="150dp"
                android:inputType="phone"
                android:maxLength="11"
                android:layout_marginRight="15dp"
                android:textSize="16sp"
                android:background="@android:color/transparent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical|right"
                android:hint="请输入持卡人绑定银行卡手机号"/>
    </RelativeLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            />

    <RelativeLayout
            android:background="@color/white"
            android:paddingLeft="18dp"
            android:layout_width="match_parent"
            android:layout_height="55dp">

        <TextView
                android:layout_centerVertical="true"
                android:text="银行卡号"
                android:textColor="#333333"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <EditText
                android:id="@+id/card_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minWidth="150dp"
                android:layout_marginRight="15dp"
                android:textSize="16sp"
                android:inputType="number"
                android:background="@android:color/transparent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical|right"
                android:hint="请输入本人银行卡号"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#f6f6f6"
                android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <RelativeLayout
            android:background="@color/white"
            android:paddingLeft="18dp"
            android:layout_width="match_parent"
            android:layout_height="55dp">

        <TextView
                android:layout_centerVertical="true"
                android:text="支行信息"
                android:textColor="#333333"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <EditText
                android:id="@+id/card_point"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minWidth="150dp"
                android:layout_marginRight="15dp"
                android:textSize="16sp"
                android:background="@android:color/transparent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical|right"
                android:hint="请输入银行卡开户网点信息"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#f6f6f6"
                android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <TextView
            android:textColor="#a8a8a8"
            android:textSize="10sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="未保证资金顺利到账，请认真填写开户行支行信息，如填写有误，会导致转账失败。（查询开户行支行信息，请咨询所属银行客服）"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/card_commit"
                android:text="确认"
                android:layout_alignParentBottom="true"
                android:background="@drawable/shape_round_theme_green"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_margin="15dp"
                android:layout_height="45dp"/>
    </RelativeLayout>
</LinearLayout>