<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fitsSystemWindows="true"
        tools:context=".activity.CommentReleaseActivity">

    <include layout="@layout/include_title"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/shape_line"/>

    <LinearLayout
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="70dp">

        <ImageView
                android:layout_marginLeft="20dp"
                android:scaleType="centerCrop"
                android:layout_width="50dp"
                android:src="@drawable/hint_img"
                android:layout_height="50dp"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_height="match_parent">

            <ImageView
                    android:src="@drawable/comment_haoping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:text="好评"
                    android:textSize="14sp"
                    android:textColor="#fd5c7a"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
                android:layout_marginLeft="40dp"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="match_parent">
            <ImageView
                    android:src="@drawable/comment_zhong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:text="中评"
                    android:textSize="14sp"
                    android:textColor="#fd5c7a"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
                android:layout_marginLeft="40dp"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="match_parent">
            <ImageView
                    android:src="@drawable/comment_zhong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:text="差评"
                    android:textSize="14sp"
                    android:textColor="#fd5c7a"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>


    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/shape_line"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:minHeight="300dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_height="wrap_content">

        <EditText
                android:layout_weight="1"
                android:gravity="top"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="14sp"
                android:hint="宝贝满足您的期待吗？说说它的优点和美中不足的地方吧"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        <LinearLayout
                android:layout_marginBottom="30dp"
                android:layout_width="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:orientation="horizontal"
                android:layout_height="80dp">
            <TextView
                    android:background="@drawable/comment_kuang"
                    android:layout_width="80dp"
                    android:text="添加图片"
                    android:gravity="center"
                    android:paddingTop="20dp"
                    android:textColor="#cccccc"
                    android:textSize="10sp"
                    android:drawablePadding="-15dp"
                    android:drawableTop="@drawable/comment_xiangji"
                    android:layout_height="80dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>