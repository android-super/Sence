<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        tools:context=".activity.CommitTagActivity">

    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            style="@style/NoLeftToolbar"
            android:elevation="0.5dp"
            android:layout_height="50dp">

        <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="50dp">

            <ImageView
                    android:id="@+id/tag_back"
                    android:src="@drawable/fanhui"
                    android:layout_width="50dp"
                    android:scaleType="center"
                    android:layout_height="50dp"/>

            <TextView
                    android:id="@+id/tag_title"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/tag_next"
                    android:text="下一步"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:background="@drawable/shape_round_tag_next"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="58dp"
                    android:gravity="center"
                    android:layout_height="24dp"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle_view"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <EditText
            android:id="@+id/tag_content"
            android:gravity="top"
            android:paddingTop="10dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textSize="15sp"
            android:textColor="#999999"
            android:background="@android:color/transparent"
            android:hint="分享你的品质生活"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
</LinearLayout>
