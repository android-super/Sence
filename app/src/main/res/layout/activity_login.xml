<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="#84cfd0"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".LoginActivity">

    <TextView
            android:id="@+id/login_cancel"
            android:text="取消"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:paddingLeft="19dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="19dp"
            android:layout_marginTop="@dimen/status_height"
            android:layout_height="wrap_content"/>


    <ImageView
            android:layout_marginTop="200dp"
            android:src="@drawable/login_sence"
            android:scaleType="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



    <LinearLayout
            android:id="@+id/login_bottom_layout"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/login_check"
                android:src="@drawable/login_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/login_agree"
                android:text="同意"
                android:textColor="#cdfdfe"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/login_protocol"
                android:text="《许可协议》"
                android:textColor="#014f58"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/login_rule"
                android:text="《隐私政策》"
                android:textColor="#014f58"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
            android:id="@+id/login_look"
            android:text="不登录，随便逛逛"
            android:textSize="15sp"
            android:layout_above="@id/login_bottom_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="60dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <LinearLayout
            android:id="@+id/login_wx"
            android:layout_marginBottom="20dp"
            android:layout_above="@id/login_look"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_login_wx"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
                android:src="@drawable/login_weixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:text="微信账号登录"
                android:textSize="15sp"
                android:textColor="#30a4a6"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>