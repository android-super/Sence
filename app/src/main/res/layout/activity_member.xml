<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.MemberActivity">

    <com.sence.view.PubTitle
            app:is_back="true"
            android:id="@+id/pub_title"
            app:tool_cover_title="V群成员"
            app:tool_cover_background="@color/white"
            style="@style/NoLeftToolbar"
            app:tool_cover_right_size="16sp"
            app:tool_cover_right_text="加入"
            app:tool_cover_right_color="@color/theme_green"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle_view"
            android:layout_below="@id/pub_title"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    <TextView
            android:id="@+id/member_join"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/shape_circle_theme_green"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            android:textSize="16sp"
            android:gravity="center"
            android:text="成为V群会员"
            android:textColor="@color/white"
            android:layout_height="45dp"/>
</RelativeLayout>