<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fitsSystemWindows="true"
        android:background="@color/white"
        tools:context=".activity.MessageActivity">
    <com.sence.view.PubTitle
            app:is_back="true"
            app:tool_cover_background="@color/white"
            app:tool_cover_title="消息中心"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
    <LinearLayout
            android:id="@+id/message_open_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:background="#ddfdfa">
        <TextView
                android:textSize="12sp"
                android:textColor="#22b2b1"
                android:text="记得开启消息通知，不然会让小伙伴失望就等哦"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/message_open"
                android:textSize="12sp"
                android:textColor="#22b2b1"
                android:text="去开启"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <RelativeLayout
            android:id="@+id/message_hd_layout"
            android:paddingLeft="15dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="90dp">
        <ImageView
                android:id="@+id/message_hd"
                android:layout_centerVertical="true"
                android:src="@drawable/message_hudong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <ImageView
                android:id="@+id/message_hd_point"
                android:layout_marginTop="-5dp"
                android:layout_marginRight="-5dp"
                android:layout_alignRight="@id/message_hd"
                android:layout_alignTop="@id/message_hd"
                android:src="@drawable/shape_message_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:text="互动消息"
                android:layout_marginLeft="15dp"
                android:textColor="#333333"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/message_hd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#f3f3f3"
                android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/message_xt_layout"
            android:paddingLeft="15dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="90dp">
        <ImageView
                android:id="@+id/message_xt"
                android:layout_centerVertical="true"
                android:src="@drawable/message_xitong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <ImageView
                android:id="@+id/message_xt_point"
                android:layout_marginTop="-5dp"
                android:layout_marginRight="-5dp"
                android:layout_alignRight="@id/message_xt"
                android:layout_alignTop="@id/message_xt"
                android:src="@drawable/shape_message_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:text="系统消息"
                android:layout_marginLeft="15dp"
                android:textColor="#333333"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/message_xt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#f3f3f3"
                android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/message_tz_layout"
            android:paddingLeft="15dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="90dp">
        <ImageView
                android:id="@+id/message_tz"
                android:layout_centerVertical="true"
                android:src="@drawable/message_tongzhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <ImageView
                android:id="@+id/message_tz_point"
                android:layout_marginTop="-5dp"
                android:layout_marginRight="-5dp"
                android:layout_alignRight="@id/message_tz"
                android:layout_alignTop="@id/message_tz"
                android:src="@drawable/shape_message_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:text="通知"
                android:layout_marginLeft="15dp"
                android:textColor="#333333"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/message_tz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#f3f3f3"
                android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/message_kf_layout"
            android:paddingLeft="15dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="90dp">
        <ImageView
                android:id="@+id/message_kf"
                android:layout_centerVertical="true"
                android:src="@drawable/message_kefu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <ImageView
                android:id="@+id/message_kf_point"
                android:layout_marginTop="-5dp"
                android:layout_marginRight="-5dp"
                android:layout_alignRight="@id/message_kf"
                android:layout_alignTop="@id/message_kf"
                android:visibility="gone"
                android:src="@drawable/shape_message_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:text="Sence客服"
                android:layout_marginLeft="15dp"
                android:textColor="#333333"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/message_kf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#f3f3f3"
                android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</LinearLayout>