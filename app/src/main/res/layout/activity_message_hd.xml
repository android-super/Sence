<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        tools:context=".activity.MessageHDActivity">

    <com.sence.view.PubTitle
            app:title="互动消息"
            app:tool_cover_background="@color/white"
            app:is_back="true"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

    <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            app:tabGravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            app:tabTextColor="@color/main_gray"
            app:tabIndicatorHeight="2dp"
            app:tabIndicatorColor="@color/theme_green"
            app:tabIndicatorFullWidth="true"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/theme_green"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
</LinearLayout>