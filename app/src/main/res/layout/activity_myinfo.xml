<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="#000000"
        android:alpha="0.6">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/iv_imgbg_myinfo"/>

    </RelativeLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:id="@+id/iv_back_myinfo"
        android:src="@drawable/myinfo_back"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="18dp"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_16"
        android:layout_marginTop="16dp"
        android:id="@+id/tv_editor_myinfo"
        android:text="编辑"
        />
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginRight="25dp"
        android:src="@drawable/hint_img"
        android:scaleType="centerCrop"
        android:layout_alignParentRight="true"
        android:id="@+id/iv_imgico_myinfo"
        android:layout_marginTop="88dp"/>

    <TextView
        android:id="@+id/tv_name_myinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="71dp"
        android:text="o糖兜兜"
        android:textColor="@color/white"
        android:textSize="29dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="25dp"
        android:layout_below="@id/tv_name_myinfo"
        android:text="东方福唐文化传媒有限公司"
        android:id="@+id/tv_address_myinfo"
        android:textColor="#cfdfe0"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/rl_num_myinfo"
        android:layout_below="@id/tv_address_myinfo">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="关注"
            android:textSize="14sp"
            android:id="@+id/tv_focus_myinfo"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="0"
            android:textSize="14sp"
            android:id="@+id/tv_focusnum_myinfo"
            android:layout_toRightOf="@+id/tv_focus_myinfo"
            android:textColor="@color/white"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            android:layout_marginLeft="20dp"
            android:text="0"
            android:layout_centerVertical="true"
            android:background="#7a797E"
            android:id="@+id/iv_long_myinfo"
            android:layout_toRightOf="@+id/tv_focus_myinfo"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="粉丝"
            android:textSize="14sp"
            android:id="@+id/tv_fans_myinfo"
            android:layout_toRightOf="@+id/iv_long_myinfo"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="0"
            android:textSize="14sp"
            android:id="@+id/tv_fansnum_myinfo"
            android:layout_toRightOf="@+id/tv_fans_myinfo"
            android:textColor="@color/white"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:layout_below="@+id/rl_num_myinfo"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="27dp"
        android:id="@+id/tv_signer_myinfo"
        android:text="TA 还没有什么想说的"/>
    <RelativeLayout
        android:layout_width="345dp"
        android:layout_height="75dp"
        android:layout_marginTop="18dp"
        android:layout_centerHorizontal="true"
        android:elevation="100dp"
        android:id="@+id/rl_shop_myinfo"
        android:background="@drawable/enjoyvip_chang"
        android:layout_below="@+id/tv_signer_myinfo">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="@dimen/dp_10"
            android:src="@drawable/hint_img"
            android:scaleType="centerCrop"
            android:id="@+id/iv_img_myinfo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#222222"
            android:textSize="13sp"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@id/iv_img_myinfo"
            android:text="绿竹巷"
            android:lineSpacingExtra="6dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:id="@+id/tv_shopname_myinfo"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥：1000"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@id/iv_img_myinfo"
            android:layout_below="@id/tv_shopname_myinfo"
            android:textColor="@color/theme_green"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="345dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_shop_myinfo"
        android:paddingTop="8dp"
        android:background="@drawable/enjoyvip_chang"
        android:layout_centerHorizontal="true"
        >
        <com.google.android.material.tabs.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/tl_tab_myinfo"
            app:tabIndicatorColor="@color/theme_green"
            app:tabSelectedTextColor="@color/theme_green"
            app:tabTextColor="#050505"
            app:tabInlineLabel="true"
            app:tabUnboundedRipple="true"
            app:tabIndicatorFullWidth="false"
            app:tabGravity="center"
            app:tabMaxWidth="0dp"
            >

        </com.google.android.material.tabs.TabLayout>
        <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tl_tab_myinfo"
            android:id="@+id/vp_content_myinfo">

        </androidx.viewpager.widget.ViewPager>
    </RelativeLayout>
</RelativeLayout>