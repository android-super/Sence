<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/rl_layout_myinfo"
    android:layout_height="match_parent">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/cl_layout_myinfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/al_appbar_myinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/rl_tool_myinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <RelativeLayout
                        android:id="@+id/rl_head_myinfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <ImageView
                            android:id="@+id/iv_head_myinfo"
                            android:layout_width="match_parent"
                            android:layout_height="279dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/shape_loading_error"
                            />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="279dp"
                            android:id="@+id/rl_headbg_myinfo"
                            android:alpha="0.6"
                            android:background="#000000"/>

                        <RelativeLayout
                            android:id="@+id/iv_imgbg_myinfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="18dp">

                            <com.sence.view.NiceImageView
                                android:id="@+id/iv_imgico_myinfo"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="25dp"
                                android:layout_marginTop="88dp"
                                android:scaleType="center"
                                android:src="@drawable/hint_img"
                                app:is_circle="true"
                                app:border_width="1dp"
                                app:is_cover_src="true"
                                />

                            <LinearLayout
                                android:id="@+id/ll_group_myinfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_below="@+id/iv_imgico_myinfo"
                                android:layout_marginRight="25dp"
                                android:layout_marginTop="16dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/iv_focus_myinfo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/guanzhu"/>

                                <ImageView
                                    android:id="@+id/iv_chat_myinfo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:src="@drawable/sixin"/>
                                <ImageView
                                    android:id="@+id/iv_edit_myinfo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:visibility="gone"
                                    android:src="@drawable/bianjiziliao"/>
                            </LinearLayout>

                            <RelativeLayout
                                android:id="@+id/rl_name_myinfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="92dp">

                                <TextView
                                    android:id="@+id/tv_name_myinfo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="26dp"
                                    android:text="o糖兜兜"
                                    android:textColor="@color/white"
                                    android:textSize="29dp"
                                    android:textStyle="bold"/>

                                <com.sence.view.NiceImageView
                                    android:id="@+id/iv_isv_myinfo"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/dp_10"
                                    android:layout_toRightOf="@+id/tv_name_myinfo"
                                    android:src="@drawable/myinfo_huiyuan"
                                    app:is_circle="true"/>

                            </RelativeLayout>

                            <TextView
                                android:id="@+id/tv_address_myinfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/rl_name_myinfo"
                                android:layout_marginLeft="26dp"
                                android:layout_marginTop="17dp"
                                android:text="东方福唐文化传媒有限公司"
                                android:textColor="#cfdfe0"/>

                            <LinearLayout
                                android:id="@+id/rl_num_myinfo"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:gravity="center_vertical"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tv_address_myinfo"
                                android:layout_marginTop="15dp">
                                <TextView
                                    android:id="@+id/tv_focus_myinfo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="25dp"
                                    android:text="关注"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"/>

                                <TextView
                                    android:id="@+id/tv_focusnum_myinfo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:text="0"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"/>


                                <TextView
                                    android:id="@+id/tv_fans_myinfo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="12dp"
                                    android:layout_toRightOf="@+id/iv_long_myinfo"
                                    android:text="粉丝"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"/>

                                <TextView
                                    android:id="@+id/tv_fansnum_myinfo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="6dp"
                                    android:layout_toRightOf="@+id/tv_fans_myinfo"
                                    android:text="0"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"/>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_signer_myinfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/rl_num_myinfo"
                                android:layout_marginLeft="25dp"
                                android:layout_marginTop="25dp"
                                android:text="TA 还没有什么想说的"
                                android:textColor="@color/white"
                                android:textSize="15sp"/>

                        </RelativeLayout>

                        <View
                            android:id="@+id/v_layout_myinfo"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_alignParentBottom="true"></View>

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl_shop_myinfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="90dp"
                        android:layout_marginTop="-25dp"
                        android:layout_below="@+id/rl_head_myinfo">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="90dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_10"
                            android:background="@drawable/myinfo_shopbg"
                            android:elevation="100dp"
                            android:id="@+id/ll_shoplayout_myinfo"
                            android:orientation="horizontal"
                            android:padding="5dp">
                            <com.sence.view.NiceImageView
                                android:id="@+id/iv_img_myinfo"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_marginRight="@dimen/dp_10"
                                android:layout_gravity="center_vertical"
                                android:scaleType="centerCrop"
                                android:src="@drawable/hint_img"
                                app:corner_radius="3dp"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingRight="20dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_shopname_myinfo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:layout_marginTop="10dp"
                                    android:ellipsize="end"
                                    android:lineSpacingExtra="6dp"
                                    android:maxLines="2"
                                    android:text="绿竹巷"
                                    android:textColor="#222222"
                                    android:textSize="13sp"
                                    />

                                <TextView
                                    android:id="@+id/tv_price_myinfo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="￥：1000"
                                    android:textColor="@color/theme_green"
                                    android:layout_marginBottom="7dp"
                                    android:textSize="@dimen/sp_14"/>
                            </LinearLayout>
                        </LinearLayout>
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/rv_shoplayout_myinfo">

                        </androidx.recyclerview.widget.RecyclerView>

                    </RelativeLayout>


                </RelativeLayout>

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/tb_tab_myinfo"
                    style="@style/NoLeftToolbar"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    app:layout_collapseMode="pin"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <View
                            android:id="@+id/shop_view_myinfo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"/>

                        <ImageView
                            android:id="@+id/iv_back_myinfo"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentBottom="true"
                            android:layout_gravity="center_vertical"
                            android:scaleType="center"
                            android:src="@drawable/login_fanhui"/>
                        <ImageView
                            android:id="@+id/iv_share_myinfo"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentBottom="true"
                            android:layout_gravity="center_vertical"
                            android:layout_alignParentRight="true"
                            android:scaleType="center"
                            android:src="@drawable/hei"/>


                    </RelativeLayout>
                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tl_tabhid_myinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="16dp"
                    android:paddingBottom="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_10"
                    app:tabIndicatorColor="@color/theme_green"
                    app:tabIndicatorFullWidth="false"
                    app:tabGravity="center"
                    app:tabSelectedTextColor="@color/theme_green"
                    app:tabTextColor="#050505"
                    />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/myinfo_vquan"
                        android:layout_centerVertical="true"
                        android:id="@+id/iv_groupchat_myinfo"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="16dp"/>
                </RelativeLayout>
                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/vp_content_myinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fcfcfc"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/perch_genrenzhu"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone"
                    android:id="@+id/iv_notimg_myinfo"
                   />
            </LinearLayout>


        </RelativeLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</RelativeLayout>