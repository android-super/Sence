<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        tools:context=".activity.OpenVipActivity">

    <com.sence.view.PubTitle
            app:is_back="true"
            app:tool_cover_title="开通会员"
            app:tool_cover_background="@color/white"
            style="@style/NoLeftToolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

    <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

        <TextView
                android:text="V"
                android:textSize="18sp"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_marginLeft="4dp"
                android:text="会员特权"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="28dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/pay_vip"
                android:text="会员专享价"
                android:background="@drawable/shape_rect_pay"
                android:drawableTop="@drawable/pay_zhuanxiangjia"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:paddingTop="15dp"
                android:textSize="11sp"
                android:textColor="#333333"
                android:layout_height="wrap_content"/>

        <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

        <TextView
                android:id="@+id/pay_make"
                android:text="分享赚钱"
                android:background="@drawable/shape_rect_pay"
                android:drawableTop="@drawable/pay_fenxiangzhuanq"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:paddingTop="15dp"
                android:textSize="11sp"
                android:textColor="#333333"
                android:layout_height="wrap_content"/>

        <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

        <TextView
                android:id="@+id/pay_share"
                android:text="VIP资源共享"
                android:background="@drawable/shape_rect_pay"
                android:drawableTop="@drawable/pay_vip"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:paddingTop="15dp"
                android:textSize="11sp"
                android:textColor="#333333"
                android:layout_height="wrap_content"/>

        <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

        <TextView
                android:id="@+id/pay_active"
                android:text="沙龙活动"
                android:background="@drawable/shape_rect_pay"
                android:drawableTop="@drawable/pay_shalong"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:paddingTop="15dp"
                android:textSize="11sp"
                android:textColor="#333333"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#f6f6f6"/>

    <TextView
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="选择支付方式"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <RelativeLayout
            android:layout_marginLeft="16dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="支付宝支付"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/pay_zhifubao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <ImageView
                android:id="@+id/pay_ali"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/select_pay"
                android:scaleType="center"
                android:layout_width="22dp"
                android:layout_height="22dp"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_marginLeft="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="微信支付"
                android:drawableLeft="@drawable/pay_weixin"
                android:drawablePadding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <ImageView
                android:id="@+id/pay_wx"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/select_pay"
                android:layout_width="22dp"
                android:scaleType="center"
                android:layout_height="22dp"/>
    </RelativeLayout>

    <TextView
            android:id="@+id/pay_commit"
            android:text="去支付￥20000"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/pay_button"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">

        <TextView
                android:text="点击去支付，即表示您已经同意读"
                android:layout_width="wrap_content"
                android:textColor="#333333"
                android:textSize="11sp"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/pay_protocol"
                android:text="《会员服务协议》"
                android:layout_width="wrap_content"
                android:textColor="@color/theme_green"
                android:textSize="11sp"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>