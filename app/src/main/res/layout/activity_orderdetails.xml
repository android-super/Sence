<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:background="#f6f6f6"
                android:fitsSystemWindows="true"
              android:layout_height="match_parent">
    <RelativeLayout
        android:elevation="1dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/rl_head_orderdetails"
        android:background="@color/white"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/fanhui"
            android:scaleType="center"
            android:id="@+id/iv_back_orderdetails"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:text="订单详情"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:text="取消订单"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingRight="16dp"
            android:id="@+id/tv_cancel_orderdetails"
            android:textColor="#999999"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#85cfd1"
        android:orientation="vertical"
        android:paddingLeft="19dp"
        android:layout_below="@+id/rl_head_orderdetails"
        android:id="@+id/rl_number_orderdetails">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/white"
            android:text="等待买家付款"
            android:id="@+id/tv_state_orderdetails"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:text="下单编号：1561516554165126"
            android:id="@+id/tv_number_orderdetails"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:text="下单时间：2019-03-21 18:15"
            android:id="@+id/tv_time_orderdetails"
            android:layout_marginBottom="12dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_number_orderdetails"
        android:id="@+id/rl_address_orderdetails"
        android:background="#ffffff">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:src="@drawable/confirmorder_dizhi"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="14sp"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="42dp"
            android:text="张三"
            android:id="@+id/tv_name_orderdetails"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="14sp"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="8dp"
            android:text="18735648084"
            android:layout_toRightOf="@+id/tv_name_orderdetails"
            android:id="@+id/tv_phone_orderdetails"/>

        <TextView
            android:id="@+id/tv_address_orderdetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="13dp"
            android:layout_below="@+id/tv_name_orderdetails"
            android:text="北京市朝阳区高碑店东D-23东方福唐"
            android:textColor="#666666"
            android:layout_marginBottom="18dp"
            android:textSize="14sp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="14dp"
            android:layout_centerVertical="true"
            android:id="@+id/iv_toaddress_orderdetails"
            android:layout_alignParentRight="true"
            android:src="@drawable/confirmorder_xia"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_address_orderdetails"
        android:id="@+id/rl_shopinfo_orderdetails"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#ffffff">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_vertical"
            android:id="@+id/ll_layout_orderdetails"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textColor="#050505"
                android:text="绿竹林专卖店"
                android:textSize="13sp"
                android:id="@+id/tv_stroename_orderdetails"/>
        </LinearLayout>
        <ImageView
            android:layout_width="89dp"
            android:layout_height="89dp"
            android:layout_below="@id/ll_layout_orderdetails"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/hint_img"
            android:id="@+id/iv_img_orderdetails"
            android:background="@drawable/shape_confirmorder_imgbg"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_layout_orderdetails"
            android:layout_toRightOf="@+id/iv_img_orderdetails"
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/tv_shopname_orderdetails"
            android:maxLines="2"
            android:layout_marginTop="16dp"
            android:lineSpacingExtra="5dp"
            android:ellipsize="end"
            android:textSize="@dimen/sp_12"
            android:textColor="#070506"
            android:text="东方福唐"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_shopname_orderdetails"
            android:layout_toRightOf="@+id/iv_img_orderdetails"
            android:layout_marginLeft="10.5dp"
            android:id="@+id/tv_price_orderdetails"
            android:layout_marginTop="32dp"
            android:textSize="@dimen/sp_12"
            android:textColor="#070506"
            android:text="￥1000.0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_shopname_orderdetails"
            android:layout_toRightOf="@+id/tv_price_orderdetails"
            android:layout_marginLeft="10dp"
            android:id="@+id/tv_num_orderdetails"
            android:layout_marginTop="32dp"
            android:textSize="@dimen/sp_12"
            android:textColor="#070506"
            android:text="х1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_img_orderdetails"
            android:layout_marginTop="17dp"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:gravity="right"
            android:id="@+id/ll_price_orderdetails"
            android:paddingRight="14dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="商品金额"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#070506"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥:1000.0"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:id="@+id/tv_shopprice_orderdetails"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#333333"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="优惠卷"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#070506"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-￥:0.0"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:id="@+id/tv_coupon_orderdetails"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#333333"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="运费"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#070506"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+￥:0.0"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:id="@+id/tv_postprice_orderdetails"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#333333"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="税费"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#070506"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+￥:0.0"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:id="@+id/tv_taxprice_orderdetails"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#333333"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="15dp"
                android:background="#f6f6f6"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="应付金额:"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_14"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:gravity="center_vertical"
                    android:text="￥656.00"
                    android:id="@+id/tv_money_orderdetails"
                    android:textColor="@color/theme_green"
                    android:textSize="@dimen/sp_14"/>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@+id/rl_shopinfo_orderdetails"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:id="@+id/ll_buttom_orderdetails"
            android:layout_alignParentBottom="true"
            android:background="#ffffff"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#070506"
                android:textSize="@dimen/sp_16"
                android:layout_marginLeft="15dp"
                android:text="合计金额："/>

            <TextView
                android:id="@+id/tv_sprice_orderdetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:text="￥1020.0"
                android:textColor="#16a5af"
                android:textSize="15sp"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"></View>
            <Button
                android:layout_width="110dp"
                android:layout_height="35dp"
                android:layout_marginRight="15dp"
                android:textColor="#ffffff"
                android:text="立即支付"
                android:textSize="@dimen/sp_14"
                android:id="@+id/bt_submint_orderdetails"
                android:background="@drawable/confirmorder_button"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="15dp"
            android:background="#f6f6f6"
            android:layout_above="@+id/ll_buttom_orderdetails"></View>
    </RelativeLayout>


</RelativeLayout>