<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:descendantFocusability="blocksDescendants"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.sence.view.PubTitle
                app:is_back="true"
                app:tool_cover_title="服务详情"
                app:tool_cover_background="@color/white"
                style="@style/NoLeftToolbar"
                app:tool_cover_right_img="@drawable/servicedetails_pingjia"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="184dp"
            android:src="@drawable/hint_img"
            android:id="@+id/iv_img_servicedetails"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="国贸CBD洗车行洗车卷"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:id="@+id/tv_name_servicedetails"
            android:drawableRight="@drawable/vip_tehui"
            android:drawablePadding="8dp"
            android:textColor="#333333"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="14dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="#666666"
                android:id="@+id/tv_address_servicedetails"
                android:text="朝阳区高拉开间啊拉开始知春路5号"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地图"
                android:textColor="#2a83e6"
                android:id="@+id/tv_map_servicedetails"
                android:layout_marginLeft="17dp"
                android:drawableRight="@drawable/map"
                android:drawablePadding="4dp"
                android:textSize="@dimen/sp_12"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:paddingTop="18dp"
            android:background="@drawable/vip_bg">
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"
                ></View>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <com.sence.view.NiceImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:scaleType="center"
                    app:is_circle="true"
                    android:id="@+id/iv_userimg_servicedetails"
                    android:src="@drawable/hint_img"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="第一位会员"
                    android:textSize="@dimen/sp_12"
                    android:id="@+id/tv_username_servicedetails"
                    android:textColor="#4b453d"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="12dp"/>
            </LinearLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:nestedScrollingEnabled="false"
            android:id="@+id/recycle_servicedetails"></androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>