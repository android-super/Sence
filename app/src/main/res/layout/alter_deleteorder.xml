<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="270dp"
              android:gravity="center_horizontal"
              android:background="@drawable/shape_deleteorder_bg"
              android:layout_height="141dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="18sp"
            android:text="提示"
            android:layout_marginTop="22dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="13sp"
        android:textColor="#333333"
        android:paddingLeft="23dp"
        android:paddingRight="26dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:text="亲亲，确定要取消订单吗？好物不等人呦~"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f6f6f6"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="#999999"
            android:text="取消"
            android:id="@+id/tv_cancel_deleteorder"
            android:gravity="center"
            android:textSize="16sp"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#f6f6f6"></View>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="#16A5AF"
            android:text="确定"
            android:id="@+id/tv_confirm_deleteorder"
            android:gravity="center"
            android:textSize="16sp"/>
    </LinearLayout>
</LinearLayout>