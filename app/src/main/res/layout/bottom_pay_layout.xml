<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <ImageView
        android:layout_width="11dp"
        android:layout_height="@dimen/sp_12"
        android:layout_margin="16dp"
        android:src="@drawable/guanbi"
        android:id="@+id/iv_back_pay"
        android:layout_gravity="right"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_marginTop="23dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#cdcdcd"
        android:id="@+id/tv_price_pay"
        android:text="￥332"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="剩余"
            android:textColor="#999999"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#999999"
            android:layout_marginLeft="9dp"
            android:gravity="center"
            android:text="00"
            android:id="@+id/tv_time_pay"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textSize="15sp"
            android:layout_margin="@dimen/dp_4"/>
        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#999999"
            android:layout_marginLeft="9dp"
            android:gravity="center"
            android:id="@+id/tv_minute_pay"
            android:text="30"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textSize="15sp"
            android:layout_margin="@dimen/dp_4"/>
        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#999999"
            android:layout_marginLeft="9dp"
            android:gravity="center"
            android:id="@+id/tv_second_pay"
            android:text="00"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="56dp">
        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/pay_zhifubao"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textSize="@dimen/sp_16"
            android:textColor="#333333"
            android:text="支付宝支付"/>
        <ImageView
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:id="@+id/iv_zhi_pay"
            android:src="@drawable/xuanzhong"
            android:layout_marginRight="15dp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dddddd"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="16dp"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="13dp">
        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/weixin"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textSize="@dimen/sp_16"
            android:textColor="#333333"
            android:text="微信支付"/>
        <ImageView
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:id="@+id/iv_wei_pay"
            android:src="@drawable/weixuan"
            android:layout_marginRight="15dp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dddddd"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="16dp"></View>
    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:background="@drawable/shape_pay_bg"
        android:text="确认支付"
        android:id="@+id/bt_pay_pay"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="37dp"
        android:layout_marginTop="30dp"/>
</LinearLayout>