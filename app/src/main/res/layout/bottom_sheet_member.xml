<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:gravity="center_horizontal"
              app:layout_behavior="@string/bottom_sheet_behavior"
              android:layout_height="wrap_content">

    <com.sence.view.NiceImageView
            android:id="@+id/into_head"
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:is_circle="true"
            app:border_color="@color/white"
            android:src="@drawable/hint_head"
            android:elevation="1dp"
            app:border_width="1dp"/>

    <LinearLayout
            android:id="@+id/bottom_layout"
            android:background="@drawable/shape_round_top_right_white"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="-40dp"
            android:gravity="center_horizontal"
            android:layout_height="230dp">

        <TextView
                android:id="@+id/into_user"
                android:text="进入个人主页"
                android:layout_marginTop="100dp"
                android:layout_width="250dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:background="@drawable/shape_circle_theme_green"
                android:layout_height="40dp"/>

        <TextView
                android:id="@+id/into_ban"
                android:text="禁言"
                android:layout_marginTop="15dp"
                android:layout_width="250dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:background="@drawable/shape_circle_theme_green"
                android:layout_height="40dp"/>
    </LinearLayout>


</LinearLayout>