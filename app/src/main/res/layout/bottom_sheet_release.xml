<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@drawable/main_bottom_bg"
                android:id="@+id/sheet_content"
                android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="110dp"
            android:gravity="center"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/sheet_img"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:gravity="center"
                android:drawableTop="@drawable/main_twxd"
                android:layout_width="wrap_content"
                android:text="图文心得"
                android:drawablePadding="15dp"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/sheet_video"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:gravity="center"
                android:drawableTop="@drawable/main_dsp"
                android:layout_width="wrap_content"
                android:text="短视频"
                android:drawablePadding="15dp"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <ImageView
            android:id="@+id/sheet_close"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/main_guanbi"
            android:layout_width="50dp"
            android:scaleType="center"
            android:layout_height="50dp"/>
</RelativeLayout>