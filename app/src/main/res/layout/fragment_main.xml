<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/white"
              tools:context=".fragment.MainFragment">

    <RelativeLayout
            android:id="@+id/rl_search"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/shape_main_search"
            android:layout_height="28dp">

        <ImageView
                android:src="@drawable/main_sousuo"
                android:layout_width="38dp"
                android:scaleType="center"
                android:layout_height="28dp"/>

        <TextView
                android:layout_marginLeft="38dp"
                android:text="@string/main_search_hint"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:textSize="14sp"
                android:textColor="@color/main_gray"
                android:gravity="center"/>
    </RelativeLayout>

    <RelativeLayout
            android:paddingBottom="7dp"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="45dp">

        <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                app:tabGravity="fill"
                app:tabTextColor="@color/main_gray"
                app:tabSelectedTextColor="@color/theme_green"
                app:tabIndicatorHeight="2dp"
                app:tabIndicatorFullWidth="false"
                app:tabInlineLabel="true"
                app:tabUnboundedRipple="true"
                app:tabIndicatorColor="@color/theme_green"
                android:layout_height="wrap_content"/>
    </RelativeLayout>


    <View
            android:background="@drawable/shape_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

    <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

</LinearLayout>