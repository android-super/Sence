<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/shape_buyshop_buttombg">
            <ImageView
                android:id="@+id/iv_img_buyshop"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:padding="5dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/shop_touying"
                android:scaleType="center"
                android:layout_marginTop="-25dp"
                android:src="@drawable/hint_img"/>

            <TextView
                android:id="@+id/tv_buyshop_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="128dp"
                android:layout_marginTop="19dp"
                android:text="￥19.8"
                android:textColor="#16A5AF"
                android:textSize="15sp"/>

            <LinearLayout
                android:id="@+id/ll_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_buyshop_price"
                android:layout_marginBottom="38dp"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="61dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="购买数量"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_14"
                    />

                <RelativeLayout
                    android:id="@+id/rl_buyshop_jian"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="#f1f1f1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/jian"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:background="#f1f1f1">

                    <TextView
                        android:id="@+id/tv_buyshop_num"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="1"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_buyshop_add"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="#f1f1f1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/jia"/>
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_num"
                android:background="@drawable/di">

                <Button
                    android:id="@+id/bt_buyshop_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginLeft="19dp"
                    android:layout_marginRight="19dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/shape_buyshop_bg"
                    android:text="确定"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14"/>
            </RelativeLayout>
        </RelativeLayout>


</RelativeLayout>