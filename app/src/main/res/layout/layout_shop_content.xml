<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    android:id="@+id/nsv_content_shopdetails"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:text="￥"
                        android:textColor="@color/theme_green"
                        android:textSize="@dimen/sp_12"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:id="@+id/tv_cprice_shopdetails"
                        android:textColor="@color/theme_green"
                        android:textSize="18sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:text="￥"
                        android:textColor="#979797"
                        android:textSize="9sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:id="@+id/tv_oprice_shopdetails"
                        android:textColor="#979797"
                        android:textSize="12sp"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/shape_shopdetials_labelbg"
                    android:paddingBottom="3dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="3dp"
                    android:id="@+id/tv_discount_shopdetails"
                    android:text="7.0折"
                    android:textColor="@color/theme_green"
                    android:textSize="7sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:id="@+id/tv_vip_shopdetails"
                    android:background="@drawable/shape_shopdetials_labelbg"
                    android:paddingBottom="3dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="3dp"
                    android:text="会员价"
                    android:textColor="@color/theme_green"
                    android:textSize="7sp"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/tv_name_shopdetails"
                android:paddingLeft="14dp"
                android:text="绿竹是禾本科，绿竹属竿较高大，近直立"
                android:textColor="#000000"
                android:textSize="16sp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:id="@+id/wb_notload"></View>
            <WebView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/wv_content_shopdetails"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:paddingLeft="14dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <com.sence.view.NiceImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="center"
                    app:is_circle="true"
                    android:id="@+id/iv_shopimg_shopdetails"
                    android:src="@drawable/hint_img"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="阿迪达斯品牌"
                    android:id="@+id/tv_shopname_shopdetails"
                    android:textColor="#999999"
                    android:textSize="@dimen/sp_12"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="#FCFCFC"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:id="@+id/ll_shopcommend_shopdetails"
                android:paddingTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_weight="1"
                    android:id="@+id/tv_shopcommendnum_shopdetails"
                    android:text="商品评价(0)"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_16"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="好评 97.7%"
                    android:id="@+id/tv_goodcommend_shopdetails"
                    android:textColor="@color/theme_green"
                    android:textSize="@dimen/sp_12"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="@dimen/dp_10"
                    android:src="@drawable/pingjia_jiantou"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycle_shopdetails"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10">

            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
</androidx.core.widget.NestedScrollView>