<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:paddingLeft="15dp"
                android:layout_height="120dp">

    <ImageView
            android:id="@+id/item_select"
            android:layout_centerVertical="true"
            android:src="@drawable/select_bus_all"
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"/>

    <com.sence.view.NiceImageView
            android:layout_marginTop="13dp"
            android:id="@+id/item_img"
            app:corner_radius="6dp"
            android:layout_width="90dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="18dp"
            android:layout_toRightOf="@id/item_select"
            android:layout_height="match_parent"/>

    <TextView
            android:layout_marginTop="13dp"
            android:id="@+id/item_content"
            android:layout_toRightOf="@id/item_img"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="15dp"
            android:text="@string/hint_content"
            android:lineSpacingExtra="4dp"
            android:textSize="13sp"
            android:textColor="#191919"
            android:maxLines="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/item_price"
            android:layout_toRightOf="@id/item_img"
            android:layout_marginLeft="13dp"
            android:textColor="@color/theme_green"
            android:textSize="12sp"
            android:text="@string/hint_price"
            android:layout_alignBottom="@id/item_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <LinearLayout
            android:background="@drawable/shape_rect_bus_num"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_marginBottom="18dp"
            android:layout_marginRight="15dp"
            android:layout_width="70dp"
            android:layout_height="22dp">

        <ImageView
                android:id="@+id/item_cut"
                android:scaleType="center"
                android:src="@drawable/bus_jian"
                android:layout_width="22dp"
                android:layout_height="22dp"/>

        <TextView
                android:id="@+id/item_num"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        <ImageView
                android:id="@+id/item_add"
                android:scaleType="center"
                android:src="@drawable/bus_jia"
                android:layout_width="22dp"
                android:layout_height="22dp"/>
    </LinearLayout>

    <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="22dp"
            android:background="#f0f0f0"/>
</RelativeLayout>