<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
                android:background="#ffffff">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_vertical"
            android:id="@+id/ll_layout_confirmorder"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textColor="#050505"
                android:text="绿竹林专卖店"
                android:textSize="13sp"
                android:id="@+id/tv_stroename_confirmorder"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:textColor="#16a5af"
                android:text="(满0元包邮)"
                android:textSize="11sp"
                android:visibility="gone"
                android:id="@+id/tv_exemption_confirmorder"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recycle_confirmorderitem"
            android:layout_below="@id/ll_layout_confirmorder">

        </androidx.recyclerview.widget.RecyclerView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/recycle_confirmorderitem"
            android:layout_marginTop="17dp"
            android:orientation="vertical"
            android:layout_marginBottom="13dp"
            android:gravity="right"
            android:layout_marginRight="14dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品金额:"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#070506"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥:1000.0"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:id="@+id/tv_shopprice_confirmorder"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#16a5af"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="邮费:"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#070506"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥:20.0"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:id="@+id/tv_postprice_confirmorder"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#16a5af"/>
            </LinearLayout>
            .

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="共1件商品"
                    android:id="@+id/tv_shopnum_confirmorder"
                    android:textSize="13sp"
                    android:textColor="#070506"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="合计:"
                    android:textSize="13sp"
                    android:textColor="#070506"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥:1020.0"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:id="@+id/tv_maxprice_confirmorder"
                    android:textSize="13sp"
                    android:textColor="#16a5af"/>

            </LinearLayout>
        </LinearLayout>
</RelativeLayout>