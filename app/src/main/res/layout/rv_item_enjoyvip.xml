<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:paddingLeft="6dp"
              android:paddingRight="6dp"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="155dp"
        android:layout_height="110dp">

        <com.sence.view.NiceImageView
            android:id="@+id/iv_img_enjoyvip_item"
            android:layout_width="match_parent"
            app:corner_radius="2dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/hint_img"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/enjoyvip_yiying"
            android:layout_alignParentBottom="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="6dp"
            android:textColor="#ffffff"
            android:textSize="10sp"
            android:id="@+id/tv_num_enjoyvip_item"
            android:text="体验 32次"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_olabel_enjoyvip_item"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxEms="4"
            android:ellipsize="end"
            android:background="@drawable/enjoyvip_biankuang"
            android:gravity="center"
            android:text="万豪旅游"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/theme_green"
            android:textSize="10sp"/>
        <TextView
            android:id="@+id/tv_tlabel_enjoyvip_item"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxEms="4"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:background="@drawable/enjoyvip_biankuang"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:text="万豪旅游"
            android:textColor="@color/theme_green"
            android:textSize="10sp"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recycle_enjoyvipimg"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="15dp">

    </androidx.recyclerview.widget.RecyclerView>


</LinearLayout>