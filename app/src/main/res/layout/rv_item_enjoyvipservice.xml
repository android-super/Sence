<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:padding="5dp"
              android:layout_marginBottom="15dp"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="155dp"
        android:layout_height="110dp">

        <com.sence.view.NiceImageView
            android:id="@+id/iv_img_enjoyvip_item"
            android:layout_width="155dp"
            app:corner_radius="2dp"
            android:layout_height="110dp"
            android:scaleType="fitXY"
            android:src="@drawable/hint_img"
            />
        <com.sence.view.NiceImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:corner_bottom_left_radius="2dp"
            app:corner_bottom_right_radius="2dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:src="@drawable/yiying"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="6dp"
            android:textColor="#ffffff"
            android:textSize="10sp"
            android:id="@+id/tv_num_enjoyvip_item"
            android:text="体验 32次"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_olabel_enjoyvip_item"
            android:layout_width="wrap_content"
            android:minWidth="60dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxEms="6"
            android:ellipsize="end"
            android:background="@drawable/shape_serivebg"
            android:textColor="#16a5af"
            android:paddingLeft="7dp"
            android:paddingRight="6dp"
            android:paddingTop="5dp"
            android:paddingBottom="@dimen/dp_4"
            android:gravity="center"
            android:text="万豪旅游"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="10sp"/>
        <TextView
            android:id="@+id/tv_tlabel_enjoyvip_item"
            android:layout_width="wrap_content"
            android:minWidth="60dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxEms="6"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:text="万豪旅游"
            android:background="@drawable/shape_serivebg"
            android:textColor="#16a5af"
            android:paddingLeft="7dp"
            android:paddingRight="6dp"
            android:paddingTop="5dp"
            android:paddingBottom="@dimen/dp_4"
            android:textSize="10sp"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recycle_enjoyvipimg"/>

</LinearLayout>