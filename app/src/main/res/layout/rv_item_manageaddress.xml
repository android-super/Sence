<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:paddingLeft="14dp"
              android:background="#ffffff"
              android:layout_marginBottom="@dimen/dp_10"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16"
            android:id="@+id/tv_name_manageaddress"
            android:text="张三"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16"
            android:layout_marginLeft="29dp"
            android:id="@+id/tv_phone_manageaddress"
            android:text="18735468084"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:textSize="13sp"
        android:id="@+id/tv_address_manageaddress"
        android:textColor="#666666"
        android:text="北京市朝阳区高碑店东D-23东方福唐"
        android:lineSpacingExtra="9dp"
        android:maxLines="2"
        android:ellipsize="end"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="#efefef"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:orientation="horizontal"
        android:gravity="right">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:id="@+id/ll_editor_manageaddress"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/manageaddress_bianji"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑"
                android:textSize="13sp"
                android:textColor="#999999"
                android:layout_marginLeft="9dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="22dp"
            android:id="@+id/ll_delete_manageaddress"
            android:layout_marginRight="12dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/manageaddress_shanchu"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除"
                android:textSize="13sp"
                android:textColor="#999999"
                android:layout_marginLeft="9dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>