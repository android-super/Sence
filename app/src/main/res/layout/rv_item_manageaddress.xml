<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="90dp"
    android:clickable="true"
    android:id="@+id/sml_layout"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:id="@+id/show_content_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="90dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/dp_10"
            android:orientation="horizontal"
            android:paddingLeft="15dp">

            <View
                android:layout_width="5dp"
                android:layout_height="15dp"
                android:background="#16A5AF"></View>

            <TextView
                android:id="@+id/tv_name_manageaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="张三"
                android:textColor="#333333"
                android:textSize="@dimen/sp_16"/>

            <TextView
                android:id="@+id/tv_phone_manageaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="18735468084"
                android:textColor="#333333"
                android:textSize="@dimen/sp_16"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_address_manageaddress"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="10dp"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lineSpacingExtra="6dp"
            android:maxLines="2"
            android:text="北京市朝阳区高碑店东D-23东方福唐"
            android:textColor="#666666"
            android:textSize="13sp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="#efefef"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hide_view"
        android:layout_width="148dp"
        android:layout_height="match_parent"
        android:background="#f6f6f6"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_editor_manageaddress"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="11dp"
                android:drawableTop="@drawable/bianji"
                android:gravity="center"
                android:text="编辑"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_delete_manageaddress"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="11dp"
                android:drawableTop="@drawable/shanchu"
                android:gravity="center"
                android:text="删除"/>
        </LinearLayout>
    </LinearLayout>

</com.mcxtzhang.swipemenulib.SwipeMenuLayout>