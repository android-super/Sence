<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal"
              android:layout_width="match_parent"

              android:layout_height="66dp">
    <com.sence.view.NiceImageView
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginLeft="15dp"
        app:is_circle="true"
        android:id="@+id/iv_img_messagechat"
        android:layout_gravity="center_vertical"
        android:src="@drawable/hint_img"
        android:layout_marginRight="8dp"
        android:scaleType="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="糖兜兜"
                android:textSize="@dimen/sp_14"
                android:textColor="#333333"
                android:id="@+id/tv_name_messagechat"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:gravity="center_vertical"
                android:id="@+id/tv_time_messagechat"
                android:layout_marginRight="15dp"
                android:text="21:23"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="#999999"
            android:text="世界太精彩，让爱各自存在"
            android:layout_marginTop="9dp"
            android:id="@+id/tv_sign_messagechat"/>
    </LinearLayout>

</LinearLayout>