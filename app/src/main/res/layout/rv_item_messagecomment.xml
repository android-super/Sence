<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="85dp">
    <com.sence.view.NiceImageView
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="14dp"
        app:is_circle="true"
        android:src="@drawable/hint_img"
        android:id="@+id/iv_image_messagecomment"
        android:scaleType="center"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="15dp"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:paddingRight="26dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="糖兜兜"
            android:textSize="@dimen/sp_14"
            android:textColor="#333333"
            android:includeFontPadding="false"
            android:layout_marginTop="18dp"
            android:id="@+id/tv_name_messagecomment"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="赞了你的作品"
            android:maxLines="2"
            android:id="@+id/tv_sign_messagecomment"
            android:textSize="@dimen/sp_14"
            android:includeFontPadding="false"
            android:layout_marginTop="7dp"
            android:textColor="#333333"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一天前"
                android:includeFontPadding="false"
                android:textSize="11sp"
                android:textColor="#999999"
                android:id="@+id/tv_time_messagecomment"/>
        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/hint_img"
        android:scaleType="center"
        android:id="@+id/iv_img_messagecomment"
        android:layout_gravity="center_vertical"/>
</LinearLayout>