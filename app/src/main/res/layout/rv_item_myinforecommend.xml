<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:paddingLeft="5dp"
              android:paddingRight="5dp"
              android:paddingTop="15dp"
              android:layout_height="320dp">


    <com.sence.view.NiceImageView
            android:id="@+id/iv_imgshop_myinforecommend"
            android:src="@drawable/hint_img"
            android:scaleType="centerCrop"
            app:corner_radius="3.5dp"
            android:transitionName="@string/translation_recommend_name"
            android:layout_width="match_parent"
            android:layout_height="160dp"/>

    <TextView
            android:text="@string/hint_describe"
            android:id="@+id/tv_title_myinforecommend"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:maxLines="1"
            android:layout_height="match_parent"/>

    <TextView
            android:id="@+id/tv_content_myinforecommend"
            android:text="@string/hint_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textColor="#333333"
            android:lineSpacingExtra="8dp"
            android:textSize="14sp"
            android:textStyle="italic"
            android:maxLines="2"
            android:layout_height="match_parent"/>

    <RelativeLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">

            <com.sence.view.NiceImageView
                    android:id="@+id/iv_img_myinforecommend"
                    android:src="@drawable/hint_img"
                    app:is_circle="true"
                    android:scaleType="centerCrop"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>

            <TextView
                    android:id="@+id/tv_name_myinforecommend"
                    android:text="@string/hint_name"
                    android:layout_marginLeft="6dp"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <ImageView
                    android:id="@+id/iv_tag_myinforecommend"
                    android:src="@drawable/main_recommend_v"
                    android:layout_marginLeft="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:id="@+id/ll_like_myinforecommend"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/tv_like_myinforecommend"
                    android:text="@string/hint_num"
                    android:layout_marginLeft="8dp"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <ImageView
                    android:id="@+id/item_support_img"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/selecte_main_support"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:id="@+id/ll_comment_myinforecommend"
                android:layout_marginRight="75dp"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/tv_comment_myinforecommend"
                    android:text="@string/hint_num"
                    android:layout_marginLeft="8dp"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <ImageView
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/main_recommend_pinglun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


        </LinearLayout>
    </RelativeLayout>
</LinearLayout>