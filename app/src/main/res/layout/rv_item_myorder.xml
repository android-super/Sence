<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_layout_myorder"
        android:background="@drawable/shape_myorder_bg"
        android:layout_margin="@dimen/dp_10">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:id="@+id/rl_head_myorder">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/myorder_gang"
                android:layout_marginLeft="13dp"
                android:layout_centerVertical="true"
                android:id="@+id/iv_vertical_myorder"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_centerVertical="true"
                android:text="等待支付"
                android:textSize="13sp"
                android:textColor="#16a5af"
                android:layout_toRightOf="@+id/iv_vertical_myorder"
                android:id="@+id/tv_state_myorder"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#9c9c9c"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:text="2019-04-09 14:38:35"
            android:id="@+id/tv_time_myorder"
            android:layout_marginRight="@dimen/dp_10"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_head_myorder"
            android:id="@+id/recycle_myorderitem">

        </androidx.recyclerview.widget.RecyclerView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="16dp"
            android:id="@+id/ll_price_myorder"
            android:layout_below="@id/recycle_myorderitem"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="11dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#070506"
                android:id="@+id/tv_num_myorder"
                android:text="共0件"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合计："
                android:textSize="13sp"
                android:textColor="#070506"
                android:layout_marginLeft="6dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#16a5af"
                android:id="@+id/tv_price_myorder"
                android:layout_marginLeft="8dp"
                android:text="￥0.00"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="14.5dp"
            android:layout_below="@+id/ll_price_myorder"
            android:id="@+id/ll_fooler_myorder"
            >
            <TextView
                android:layout_width="75dp"
                android:layout_height="25dp"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/shape_myorder_bottom"
                android:textColor="#050505"
                android:gravity="center"
                android:textSize="13sp"
                android:id="@+id/tv_service_myorder"
                android:text="联系客服"
                />
            <TextView
                android:layout_width="75dp"
                android:layout_height="25dp"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/shape_myorder_bottom"
                android:textColor="#050505"
                android:gravity="center"
                android:textSize="13sp"
                android:id="@+id/tv_cancel_myorder"
                android:text="取消订单"
                />
            <TextView
                android:layout_width="75dp"
                android:layout_height="25dp"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/myoder_button"
                android:textColor="#ffffff"
                android:gravity="center"
                android:textSize="13sp"
                android:id="@+id/tv_alipay_myorder"
                android:text="立即支付"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>