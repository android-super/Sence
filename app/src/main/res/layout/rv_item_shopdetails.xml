<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_marginRight="5dp"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_img_shopdetails"
        android:layout_width="137dp"
        android:layout_height="135dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/hint_img"/>

    <LinearLayout
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_img_shopdetails"
        android:layout_marginTop="-5dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="@drawable/zheng_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">

            <com.sence.view.NiceImageView
                android:id="@+id/iv_shopcommentimg_shopdetails"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:is_circle="true"
                android:scaleType="center"
                android:src="@drawable/hint_img"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:id="@+id/tv_name_shopdetailscommend"

                android:text="绿竹林"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"

            android:textSize="13sp"
            android:lineSpacingExtra="8dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:id="@+id/tv_content_shopdetailscommend"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="绿竹是禾本科，绿竹属竿较高大，近直立，单丛生；节间圆筒形，竿壁厚。箨鞘质地坚韧，顶端截形或两肩部广圆；"/>
    </LinearLayout>
</RelativeLayout>