<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:gravity="center"
              android:layout_height="match_parent">

    <RelativeLayout
            android:background="@drawable/update_bg"
            android:layout_width="305dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_height="375dp">
        <TextView
                android:id="@+id/update_content"
                android:text="我爱中国，我爱我的目前我是你最爱的人\n请给我一份爱"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="180dp"
                android:textSize="13sp"
                android:textColor="#797979"
                android:lineSpacingExtra="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <Button
                android:id="@+id/update_download"
                android:layout_marginBottom="20dp"
                android:text="立即下载"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/update_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
    <ImageView
            android:id="@+id/update_close"
            android:layout_marginTop="40dp"
            android:src="@drawable/update_guanbi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</LinearLayout>